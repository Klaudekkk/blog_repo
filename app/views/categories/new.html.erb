
<%= render 'shared/errors', obj: @category%>
<h1 class="mt-4 is-size-1 has-text-centered">Create category</h1>
<div class="container ">
  <div class="columns is-justify-content-center">
    <div class="column is-half mt-4 ">
      <div class="card ">
        <%= form_with(model: @category, local: true, data: { turbo: false }) do |f| %>
          <p>
            <%= f.label :name %><br/>
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.submit class: "button is-success" %>
          </p>

        <% end %>
      </div>
    </div>
  </div>

</div>