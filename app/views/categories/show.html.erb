<h1 class="mt-4 is-size-1 has-text-centered">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="t has-text-centered mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "button is-info" %>
  </div>
<% end %>


<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>


<%= render 'articles/article' %>