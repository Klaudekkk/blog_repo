<h1 class="mt-4 is-size-1 has-text-centered"><%= @user.username %>'s profile</h1>
<h5 class="mt-4 is-size-1 has-text-centered"><%= "Admin" if current_user.admin? %></h5>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<div class="is-flex is-justify-content-center">
  <%= gravatar_for @user, size: 200 %>
</div>>
<% if logged_in? && @user == current_user %>
  <div class="t has-text-centered mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "button is-info" %>
  </div>
<% end %>
<%= render 'articles/article' %>